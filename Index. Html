                author: "टॉपर स्टूडेंट",
                category: "सीखना"
            },
            {
                text: "Failure से डरो मत। 10वीं में 60% लाने वाला student आज successful entrepreneur है। Important है निरंतर प्रयास!",
                author: "सक्सेस स्टोरी",
                category: "सफलता"
            },
            {
                text: "तुम्हारी उम्र energy की है। इस energy को parties में waste करने से अच्छा books में invest करो।",
                author: "युवा मार्गदर्शक",
                category: "एनर्जी"
            }
        ];

        // App State
        let currentQuoteIndex = 0;
        let favorites = JSON.parse(localStorage.getItem('favorites')) || [];
        let notes = JSON.parse(localStorage.getItem('notes')) || [];
        let userStats = JSON.parse(localStorage.getItem('userStats')) || {
            streak: 7,
            quotesRead: 58,
            favorites: 12,
            lastVisit: new Date().toDateString()
        };
        let quoteCount = 0;
        let darkMode = localStorage.getItem('darkMode') === 'true';

        // Timer Variables
        let timer;
        let timerTime = 25 * 60;
        let isTimerRunning = false;

        // Ad State
        let adState = {
            adCounter: 0,
            adsInitialized: false
        };

        // Initialize AdMob Ads
        function initializeAds() {
            try {
                // Wait for AdMob script to load
                if (typeof adsbygoogle !== 'undefined') {
                    // Push ads to initialize
                    (adsbygoogle = window.adsbygoogle || []).push({});
                    adState.adsInitialized = true;
                    console.log('AdMob ads initialized successfully');
                    
                    // Reload ads every 60 seconds for fresh content
                    setInterval(() => {
                        reloadAllAds();
                    }, 60000);
                }
            } catch (error) {
                console.log('Ad initialization error:', error);
            }
        }

        // Reload all ads
        function reloadAllAds() {
            if (adState.adsInitialized) {
                // This will refresh all ads on the page
                (adsbygoogle = window.adsbygoogle || []).push({});
            }
        }

        // Show Interstitial Ad
        function showInterstitialAd() {
            adState.adCounter++;
            
            // Har 3rd action pe ad dikhao
            if (adState.adCounter % ADMOB_CONFIG.QUOTES_BETWEEN_ADS === 0) {
                showAdModal();
            }
        }

        // Show Rewarded Ad
        function showRewardedAd() {
            showAdModal();
        }

        // Watch Rewarded Ad
        function watchRewardedAd() {
            showNotification('🎉 धन्यवाद! विज्ञापन देखने के लिए!');
            
            // Simulate ad completion after 3 seconds
            setTimeout(() => {
                giveReward();
                closeAd();
            }, 3000);
        }

        // User ko reward do
        function giveReward() {
            userStats.quotesRead += 5;
            userStats.motivationLevel = Math.min(100, userStats.motivationLevel + 20);
            updateStats();
            updateMotivationLevel();
            localStorage.setItem('userStats', JSON.stringify(userStats));
            
            showNotification('🎁 बधाई! आपको ५ एक्स्ट्रा मोटिवेशन मिले!');
            
            // Track reward given
            trackAdImpression('rewarded');
        }

        // Ad Impression Tracking
        function trackAdImpression(adType) {
            console.log(`Ad Impression: ${adType}`);
            
            let adAnalytics = JSON.parse(localStorage.getItem('adAnalytics')) || {
                bannerImpressions: 0,
                interstitialImpressions: 0,
                rewardedImpressions: 0,
                totalRevenue: 0
            };
            
            switch(adType) {
                case 'banner':
                    adAnalytics.bannerImpressions++;
                    adAnalytics.totalRevenue += 0.01;
                    break;
                case 'interstitial':
                    adAnalytics.interstitialImpressions++;
                    adAnalytics.totalRevenue += 0.02;
                    break;
                case 'rewarded':
                    adAnalytics.rewardedImpressions++;
                    adAnalytics.totalRevenue += 0.05;
                    break;
            }
            
            localStorage.setItem('adAnalytics', JSON.stringify(adAnalytics));
        }

        // Show Ad Modal
        function showAdModal() {
            document.getElementById('interstitialAd').style.display = 'flex';
            trackAdImpression('interstitial');
        }

        function closeAd() {
            document.getElementById('interstitialAd').style.display = 'none';
        }

        // Initialize App
        function initApp() {
            updateStats();
            checkDailyStreak();
            updateTime();
            applyDarkMode();
            updateMotivationLevel();
            loadNotes();
            updateTimerDisplay();
            
            // Initialize ads after a short delay
            setTimeout(initializeAds, 1000);
            
            newQuote();
            
            setInterval(updateTime, 60000);
            setupSmartReminders();
        }

        // Update time
        function updateTime() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', hour12: false });
            document.getElementById('current-time').textContent = timeString;
        }

        // Apply dark mode
        function applyDarkMode() {
            if (darkMode) {
                document.documentElement.setAttribute('data-theme', 'dark');
            } else {
                document.documentElement.removeAttribute('data-theme');
            }
        }

        // Toggle dark mode
        function toggleDarkMode() {
            darkMode = !darkMode;
            localStorage.setItem('darkMode', darkMode);
            applyDarkMode();
            showNotification(darkMode ? 'डार्क मोड चालू' : 'डार्क मोड बंद');
        }

        // Update motivation level
        function updateMotivationLevel() {
            const level = Math.min(100, userStats.quotesRead * 2 + userStats.streak * 5);
            document.getElementById('motivationLevel').style.width = level + '%';
            document.querySelector('.motivation-level span:last-child').textContent = level + '%';
        }

        // Update user stats in UI
        function updateStats() {
            document.getElementById('streakCount').textContent = userStats.streak;
            document.getElementById('quotesRead').textContent = userStats.quotesRead;
            document.getElementById('favoritesCount').textContent = userStats.favorites;
        }

        // Check and update daily streak
        function checkDailyStreak() {
            const today = new Date().toDateString();
            if (userStats.lastVisit !== today) {
                const lastVisit = new Date(userStats.lastVisit);
                const todayDate = new Date(today);
                const diffTime = Math.abs(todayDate - lastVisit);
                const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
                
                if (diffDays === 1) {
                    userStats.streak++;
                } else if (diffDays > 1) {
                    userStats.streak = 1;
                }
                
                userStats.lastVisit = today;
                localStorage.setItem('userStats', JSON.stringify(userStats));
                updateStats();
                updateMotivationLevel();
            }
        }

        // Show selected section
        function showSection(sectionId) {
            document.querySelectorAll('.section').forEach(section => {
                section.classList.remove('active');
            });
            
            document.getElementById(sectionId).classList.add('active');
            
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active');
            });
            
            event.currentTarget.classList.add('active');
        }

        // New quote function
        function newQuote() {
            showInterstitialAd();

            userStats.quotesRead++;
            localStorage.setItem('userStats', JSON.stringify(userStats));
            updateStats();
            updateMotivationLevel();

            let newIndex;
            do {
                newIndex = Math.floor(Math.random() * quotes.length);
            } while (newIndex === currentQuoteIndex && quotes.length > 1);
            
            currentQuoteIndex = newIndex;
            
            const quoteElement = document.getElementById('quoteText');
            const authorElement = document.getElementById('quoteAuthor');
            const categoryElement = document.getElementById('quoteCategory');
            
            quoteElement.classList.remove('fade-in');
            authorElement.classList.remove('fade-in');
            categoryElement.classList.remove('fade-in');
            
            setTimeout(() => {
                quoteElement.textContent = quotes[currentQuoteIndex].text;
                authorElement.textContent = quotes[currentQuoteIndex].author;
                categoryElement.textContent = quotes[currentQuoteIndex].category;
                
                quoteElement.classList.add('fade-in');
                authorElement.classList.add('fade-in');
                categoryElement.classList.add('fade-in');
            }, 200);
        }

        // Study Timer Functions
        function startTimer() {
            if (!isTimerRunning) {
                isTimerRunning = true;
                timer = setInterval(updateTimer, 1000);
                showNotification('टाइमर शुरू हो गया! 🕐');
            }
        }

        function pauseTimer() {
            if (isTimerRunning) {
                isTimerRunning = false;
                clearInterval(timer);
                showNotification('टाइमर रोक दिया गया ⏸️');
            }
        }

        function resetTimer() {
            isTimerRunning = false;
            clearInterval(timer);
            timerTime = 25 * 60;
            updateTimerDisplay();
            showNotification('टाइमर रिसेट हो गया 🔄');
        }

        function setTimer(minutes) {
            isTimerRunning = false;
            clearInterval(timer);
            timerTime = minutes * 60;
            updateTimerDisplay();
            showNotification(`${minutes} मिनट का टाइमर सेट हो गया`);
        }

        function updateTimer() {
            if (timerTime > 0) {
                timerTime--;
                updateTimerDisplay();
            } else {
                clearInterval(timer);
                isTimerRunning = false;
                showNotification('टाइमर पूरा हो गया! 🎉 ब्रेक लें');
                
                if (ADMOB_CONFIG.TIMER_COMPLETION_ADS) {
                    showInterstitialAd();
                }
            }
        }

        function updateTimerDisplay() {
            const minutes = Math.floor(timerTime / 60);
            const seconds = timerTime % 60;
            document.getElementById('timerDisplay').textContent = 
                `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        }

        // Notes Functions
        function saveNote() {
            const noteText = document.getElementById('noteText').value.trim();
            if (noteText) {
                const newNote = {
                    id: Date.now(),
                    text: noteText,
                    date: new Date().toLocaleDateString('hi-IN')
                };
                notes.unshift(newNote);
                localStorage.setItem('notes', JSON.stringify(notes));
                document.getElementById('noteText').value = '';
                loadNotes();
                showNotification('नोट सेव हो गया! 📝');
                
                if (notes.length % ADMOB_CONFIG.NOTES_BETWEEN_ADS === 0) {
                    showInterstitialAd();
                }
            }
        }

        function loadNotes() {
            const container = document.getElementById('notesList');
            container.innerHTML = '';
            
            if (notes.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-sticky-note"></i>
                        <p>अभी तक कोई नोट नहीं है</p>
                    </div>
                `;
                return;
            }
            
            notes.forEach(note => {
                const noteElement = document.createElement('div');
                noteElement.className = 'note-item';
                noteElement.innerHTML = `
                    <div class="note-content">${note.text}</div>
                    <div class="note-date">${note.date}</div>
                `;
                container.appendChild(noteElement);
            });
        }

        // Smart Reminders
        function setupSmartReminders() {
            setInterval(() => {
                const now = new Date();
                const hour = now.getHours();
                
                if ([10, 14, 19].includes(hour) && now.getMinutes() === 0) {
                    showNotification('📚 पढ़ाई का समय हो गया है! थोड़ा समय निकालें');
                }
                
                if (userStats.motivationLevel < 50 && Math.random() > 0.7) {
                    showNotification('💪 नया मोटिवेशन पढ़ने का समय!');
                }
            }, 1800000);
        }

        // Share Functions
        function showShareModal() {
            document.getElementById('shareModal').style.display = 'flex';
        }

        function closeShareModal() {
            document.getElementById('shareModal').style.display = 'none';
        }

        function shareOnWhatsApp() {
            const quote = document.getElementById('quoteText').textContent;
            const author = document.getElementById('quoteAuthor').textContent;
            const shareText = `${quote} ${author}\n\nस्टूडेंट मोटिवेशन ऐप से साझा किया गया`;
            
            const whatsappUrl = `https://wa.me/?text=${encodeURIComponent(shareText)}`;
            window.open(whatsappUrl, '_blank');
            closeShareModal();
            showNotification('WhatsApp पर शेयर किया गया');
        }

        function shareOnFacebook() {
            showNotification('Facebook पर शेयर किया गया');
            closeShareModal();
        }

        function shareOnInstagram() {
            showNotification('Instagram स्टोरी के लिए कॉपी किया गया');
            copyToClipboard();
        }

        function copyToClipboard() {
            const quote = document.getElementById('quoteText').textContent;
            const author = document.getElementById('quoteAuthor').textContent;
            const textToCopy = `${quote} ${author}`;
            
            navigator.clipboard.writeText(textToCopy).then(() => {
                showNotification('मोटिवेशन कॉपी किया गया!');
            });
            closeShareModal();
        }

        function copyQuote() {
            const quote = document.getElementById('quoteText').textContent;
            const author = document.getElementById('quoteAuthor').textContent;
            const textToCopy = `${quote} ${author}`;
            
            navigator.clipboard.writeText(textToCopy).then(() => {
                showNotification('मोटिवेशन कॉपी किया गया!');
            });
        }

        function addToFavorites() {
            const currentQuote = {
                text: document.getElementById('quoteText').textContent,
                author: document.getElementById('quoteAuthor').textContent,
                category: document.getElementById('quoteCategory').textContent
            };
            
            const exists = favorites.some(fav => 
                fav.text === currentQuote.text && fav.author === currentQuote.author
            );
            
            if (!exists) {
                favorites.push(currentQuote);
                localStorage.setItem('favorites', JSON.stringify(favorites));
                
                userStats.favorites++;
                localStorage.setItem('userStats', JSON.stringify(userStats));
                updateStats();
                updateMotivationLevel();
                
                showNotification('मोटिवेशन सेव किया गया! 💖');
            } else {
                showNotification('पहले से ही सेव किया हुआ है! ⭐');
            }
        }

        function showNotification(message) {
            const notification = document.getElementById('notification');
            const notificationText = document.getElementById('notificationText');
            
            notificationText.textContent = message;
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }

        // Initialize the app when page loads
        window.onload = initApp;
    </script>
</body>
</html>
